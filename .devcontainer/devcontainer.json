{
  "name": "Conda Jupyter Dev Container",
  "build": {
  "dockerfile": "Dockerfile",
  "context": ".."
},
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-toolsai.jupyter"
      ]
    }
  },
  "forwardPorts": [8888],
  "postCreateCommand": "conda run -n dev jupyter notebook --ip=0.0.0.0 --port=8888 --no-browser --allow-root &",
  "portsAttributes": {
    "8888": {
      "label": "Jupyter Notebook",
      "onAutoForward": "openBrowser"
    }
  },
  "features": {},
  "remoteUser": "vscode"
}
