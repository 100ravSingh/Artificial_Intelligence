{
  "name": "Jupyter Dev Container",
  "image": "mcr.microsoft.com/devcontainers/python:3.11",
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-toolsai.jupyter",
        "ms-python.python"
      ]
    }
  },
  "forwardPorts": [8888],
  "postCreateCommand": "pip install notebook && jupyter notebook --ip=0.0.0.0 --port=8888 --no-browser --allow-root &",
  "portsAttributes": {
    "8888": {
      "label": "Jupyter Notebook",
      "onAutoForward": "openBrowser"
    }
  }
}
